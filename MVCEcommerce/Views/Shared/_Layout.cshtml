@inject DbcontextEcommerce dbcontext
@{
    var catalogs = dbcontext.Catalogs.Where(p => p.IsEnabled).OrderBy(p => p.NameTr).ToList();
}

<!DOCTYPE html>
<html>
<head>
    <title> MvcECommerce </title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/site.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <span class="text-warning fw-bold">MVC</span><span class="text-body-secondary">E-Commerce</span>

            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>


                    <li class="nav-item app-dropdown-toggle">
                        <a class="nav-link " href="#">Kataloglar</a>
                        <div class="app-dropdown">
                            <ul class="nav flex-column">
                                    @foreach (var catalog in catalogs)
                                    {
                                        <li class="nav-item" >
                                            <a class="nav-link" asp-route="Catalog" asp-route-name="@catalog.NameTr.ToSafeUrlString()" asp-route-id="@catalog.Id">@catalog.NameTr</a>
                                         </li>    
                                }
                            </ul>
                        </div>
                    </li>
                </ul>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" />
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>

    @RenderBody()


    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(() => {
            $('.app-dropdown-toggle').on('mouseenter', (e) => {
                $(e.currentTarget).find('div').addClass('active');
            });
            $('.app-dropdown-toggle').on('mouseleave', (e) => {
                $(e.currentTarget).find('div').removeClass('active');
            });
        });
    </script>

</body>
</html>
