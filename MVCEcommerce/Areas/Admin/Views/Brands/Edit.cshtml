@model MVCECommerceData.Brand
@{

    ViewData["Title"] = "Marka Düzenle";

}

<form method="post" enctype="multipart/form-data">

    <div class="mb-3">
        <label class=" form-label " asp-for="Name"> </label>
        <input class=" form-control" asp-for="Name" placeholder="marka adını giriniz." />
        <span class="text-danger" asp-validation-for="Name"> </span>
    </div>
    <div class="mb-3">
        <div class="custom-file">
            <input class="custom-file-input" type="file" asp-for="LogoFile" />
            <label class="custom-file-label" asp-for="LogoFile"> Dosya Seçiniz. </label>
        </div>
    </div>

    <div class=" mb-3">
        <div class=" form-check ">
            <input class="form-check-input" asp-for="IsEnabled" />
            <label class="form-check-label" asp-for="IsEnabled"> </label>
        </div>
    </div>
    <div class="d-flex ">
        <a class="btn btn-link" asp-action="Index"> İptal Et </a>
        <button type="submit" class="btn btn-google "> Kaydet </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 